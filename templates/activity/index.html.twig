{% extends 'base.html.twig' %}

{% block title %}Hello ActivityController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1> Les activit√©s </h1>
    <ol>
        {% for act in activities %}
            <a href="{{path('activity_display', {'activity' : act.id })}}">
            <li> {{act.name | capitalize }}</a>
                <br>    
                <img src="{{asset('img/' ~ act.picture)}}" width="100" height="100" alt="" srcset="">
                <br>
                <a class="badge badge-danger" href="{{path('activity_delete', {'activity' : act.id })}}">  supprimer </a> 
                <a class="badge badge-primary" href="{{path('activity_update', {'activity' : act.id })}}">  modifier </a>
            </li>
        {% endfor %}
    </ul>
</div>


    {% for i in 1..pages %}
    <a href="{{path('activity_page', {'page' : i} )}}"> page {{ i }} </a> 
    {% endfor %}

{% endblock %}
